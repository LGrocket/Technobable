<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @term.name %>
  <br />
  <%= raw '<b>Definitions:</b>' unless @term.definitions.nil? %>
  <% @term.definitions.each do |definition| %>
    <li><%= definition.content %></li>
  <% end %>
  <b>Tags:</b>
  <%= @term.tags %>
</p>


<%= link_to 'Edit', edit_term_path(@term) %>
<%= link_to 'Back', terms_path %>
